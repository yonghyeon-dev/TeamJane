{
  "name": "weave-erp",
  "version": "1.0.0",
  "description": "WEAVE - 프리랜서를 위한 올인원 워크스페이스",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "deploy": "vercel --prod",
    "deploy:preview": "vercel",
    "verify:production": "node scripts/verify-production.js",
    "pre-deploy": "npm run type-check && npm run lint && npm run build && npm run verify:production",
    "analyze": "ANALYZE=true npm run build",
    "test:performance": "echo 'Performance tests would run here'",
    "audit:security": "npm audit && npm run verify:production"
  },
  "keywords": [
    "react",
    "nextjs",
    "erp",
    "freelancer",
    "ui",
    "components",
    "theme",
    "tailwind",
    "typescript",
    "supabase"
